<%# display the cards %>
<div class="details">
  <img src="https://source.unsplash.com/random" />
  <div class="info">
    <div>
      <h2><%= @flat.name %></h2>
      <p><%= @flat.description %></p>
    </div>
    <h2 class="card-pricing"><i class="fas fa-user-friends"></i><span><%= @flat.price_per_night %></span></h2>
    <h2 class="card-pricing"><i class="fas fa-euro-sign"></i><span><%= @flat.number_of_guests %></span></h2>
  </div>
</div>

